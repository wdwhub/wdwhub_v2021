<%= form_with(model: [:backstage, @dining_venue], local: true) do |form| %>
  <% if dining_venue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dining_venue.errors.count, "error") %> prohibited this dining_venue from being saved:</h2>

      <ul>
      <% dining_venue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
