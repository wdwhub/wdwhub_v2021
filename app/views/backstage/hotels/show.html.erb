<div class="page-header">
  <%= link_to backstage_hotels_path, class: 'btn btn-default' do %>
    All Hotels
  <% end %>
  <%= link_to edit_backstage_hotel_path(@hotel), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show hotel</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @hotel.name %></dd>
  <dt>short name:</dt>
  <dd><%= @hotel.short_name %></dd>
  <dt>permalink:</dt>
  <dd><%= @hotel.permalink %></dd>
  <dt>venue_permalink:</dt>
  <dd><%= @hotel.venue_permalink %></dd>
</dl>
