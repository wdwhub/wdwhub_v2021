


<div class="row">
  <div class="col-sm-6">
    <h1>Attractions</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_attraction_path, class: 'btn btn-primary' do %>
    Add New Attraction
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            
      </tr>
    </thead>

    <tbody>
      <% @attractions.each do |attraction| %>
        <%= content_tag :tr, id: dom_id(attraction), class: dom_class(attraction) do %>
          
            <td><%= link_to attraction.name, attraction %></td>
          

          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
